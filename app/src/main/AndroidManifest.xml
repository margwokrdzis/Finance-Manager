<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appzaliczenie.financemanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".MainWindowActivity" />
        <activity android:name=".ClientListActivity" />
        <activity android:name=".IncomeActivity" />
        <activity android:name=".OutgoingsActivity" />
        <activity android:name=".AddIncomeActivity" />
        <activity android:name=".AddOutgoingsActivity" />
        <activity android:name=".MonthlyStatisticsActivity" />
        <activity android:name=".AddNewClientActivity" />
        <activity android:name=".MyProfileActivity" />
        <activity android:name=".ClientInfoActivity" />
        <activity android:name=".CalculatorActivity" />
        <activity android:name=".UpdateCompanyActivity"></activity>
    </application>

</manifest>