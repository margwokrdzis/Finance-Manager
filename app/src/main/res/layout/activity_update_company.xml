<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dane firmy"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nazwa firmy"
                android:textAlignment="viewStart"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ucompanyNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Wprowadz nazwÄ™ firmy"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adres e-mail"
                android:textAlignment="viewStart"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/uemailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj adres e-mail"
                android:inputType="textWebEmailAddress" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numer Telefonu"
                android:textAlignment="viewStart"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/uphoneET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj numer telefonu"
                android:inputType="phone"
                android:selectAllOnFocus="false" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="NIP"
                android:textAlignment="viewStart"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/unipET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj kod pocztowy"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="false" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Adres Firmy"
                android:textAlignment="viewStart"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ucityET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj Miasto"
                android:inputType="textCapWords"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/ustreetET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj Ulice"
                android:inputType="textCapWords"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/ubuildingNumET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj numer budynku"
                android:inputType="textCapWords|phone"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/udoorNumET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj numer lokalu"
                android:inputType="textCapWords|phone"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/upostalCodeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj kod pocztowy"
                android:inputType="textCapWords|phone"
                android:selectAllOnFocus="false" />

            <Button
                android:id="@+id/updateInfoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="updateInfo"
                android:text="Zaktualizuj dane" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>